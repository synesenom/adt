- var name = "infobox"
- var links = {minjs: "widgets.infobox", source: "widgets.infobox", docs: "widgets.infobox"}
- var libs = ["d3.v4", "lodash.4.17.4"]
- var modules = ["widget", "widgets.infobox"]
- var description = "An info widget is a small pop-up window at the top of the page displaying some information about the dashboard. Content of the info box can be HTML formatted. The info box is immediately shown after creation."
include pug/example
script.doc.
    // add a button
    var button = d3.select("#widget").append("div")
        .style("position", "absolute")
        .style("left", "50%")
        .style("top", "50%")
        .style("width", "200px")
        .style("padding", "7px 0 6px 0")
        .style("margin-left", "-110px")
        .style("cursor", "pointer")
        .style("background-color", "dodgerblue")
        .style("color", "white")
        .style("text-align", "center")
        .text("SHOW INFO BOX");
script.doc.
    // add info
    button.on("click", function() {
        new du.widgets.InfoBox()
            .content("This is an example of an info widget with not so much information. Click anywhere to dismiss this window.")
            .render();
    });
