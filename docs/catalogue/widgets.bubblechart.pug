- var name = "bubblechart"
- var links = {source: "widgets.bubblechart", docs: "widgets.bubblechart"}
- var libs = ["d3.v4", "lodash.4.17.4"]
- var modules = ["widget", "widgets.bubblechart"]
- var description = "A bubble chart is useful when <span class='good'>three or four dimensions</span> need to be plotted for a <span class='good'>small number</span> data points. Note that if only simple correlations are to shown for a <span class='bad'>large data set</span>, a scatter plot is a better choice."
include pug/example
script.doc.
    // generate some data
    var data = [
        {name: "peach", x: 100, y: 68, size: 0.8},
        {name: "seeded grape", x: 85, y: 13, size: 0.3},
        {name: "strawberry", x: 75, y: 75, size: 0.4},
        {name: "seedless grape", x: 72, y: 100, size: 0.3},
        {name: "pineapple", x: 68, y: -100, size: 2.4},
        {name: "blueberry", x: 58, y: 87, size: 0.2},
        {name: "cherry", x: 38, y: 42, size: 0.3},
        {name: "pear", x: 37, y: 66, size: 1},
        {name: "green apple", x: 22, y: 79, size: 1},
        {name: "plum", x: 17, y: 59, size: 0.6},
        {name: "watermelon", x: 15, y: -20, size: 3.5},
        {name: "red apple", x: -12, y: 79, size: 1},
        {name: "banana", x: -18, y: 16, size: 2.8},
        {name: "pomegranate", x: -20, y: -85, size: 1.3},
        {name: "orange", x: -46, y: -49, size: 1},
        {name: "tomato", x: -74, y: 26, size: 0.8},
        {name: "grapefruit", x: -86, y: -75, size: 1.5},
        {name: "lemon", x: -100, y: -15, size: 0.9}
    ];
    var colors = {
        peach: "#FFE5B4",
        "seeded grape": "#89b128",
        strawberry: "#d20e07",
        "seedless grape": "#89b128",
        pineapple: "#ffec88",
        blueberry: "#312581",
        cherry: "#C40000",
        pear: "#d5d949",
        "green apple": "#5BC236",
