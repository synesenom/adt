- var name = "linechart"
- var links = {source: "widgets.linechart", docs: "widgets.linechart"}
- var libs = ["d3.v4", "lodash.4.17.4"]
- var modules = ["widget", "widgets.linechart"]
- var description = "Line charts are most commonly used to show <span class='good'>temporal changes</span> or trends in quantitative data. As the data points are connected, it is expected that consecutive points are <span class='good'>related</span> to each other."
include pug/example
script.doc.
    // generate some data
    var data = Array.from(new Array(100).keys()).map(function (i) {
        return {
            x: i,
            y: {
                mango: 10 * Math.pow(i / 40, 2),
                kiwi: 10 * Math.log(i + 1) * Math.pow(Math.cos(Math.PI * i / 15), 2) + 2
            },
            dy: {
                mango: i / 10,
                kiwi: 6
            }
        }
    });
script.doc.
    // create chart
    var width = parseFloat(d3.select("#widget").style("width"));
    var height = parseFloat(d3.select("#widget").style("height"));
    var linechart = new du.widgets.LineChart("mychart", "#widget")
        .data(data)
        .width(width)
        .height(height)
        .xLabel("days")
        .yLabel("price")
        .tooltip(true)
        .margins(40)
        .fontSize(14)
        .colors({mango: "dodgerblue", kiwi: "limegreen"})
        .render();
script.doc.
    // add interactions
    linechart
        .mouseover(function (k) {
            // Highlight hovered plot
            linechart.highlight(k, 300);
        })
        .mouseleave(function () {
            // Remove highlights by passing null
            linechart.highlight(null, 300);
        })
        .click(function (k) {
            // Show an alert on click
            alert("Plot clicked: '" + k + "'");
        })
        .render();
script.doc.
    // add marker
    linechart.addMarker("mymarker", "mango", 34, 87, "trend");
+resize()